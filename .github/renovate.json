{
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchPackageNames": ["php"],
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["major", "minor"],
      "enabled": false
    },
    {
      "matchPackageNames": ["php"],
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["patch"],
      "enabled": true
    }
  ],
  "ignorePaths": ["node16", "php8.0-cli"]
}
